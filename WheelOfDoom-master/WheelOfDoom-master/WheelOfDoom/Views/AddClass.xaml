<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WheelOfDoom.Views.AddClass"
             Title="Add Class"
             StyleClass="content-page">

    <VerticalStackLayout>
        <Entry
         Placeholder="Class name"
         x:Name="EntryClassName"
         StyleClass="entry-input"/>

        <Button
            Text="Add Class"
            Clicked="AddNewClass"
            StyleClass="button-primary"/>
    </VerticalStackLayout>
</ContentPage>
