<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoteriaUcznia.Views.ClassList"
             Title="Class List"
             StyleClass="content-page">

    <VerticalStackLayout x:Name="Body" Padding="10">
        <Label 
            x:Name="ClassListLabel"
            Text="Select class:"
            StyleClass="label-title" />

        <ScrollView HeightRequest="300">
            <VerticalStackLayout x:Name="ClassListContainer" />
        </ScrollView>

        <Button 
            Text="New Class"
            HorizontalOptions="Center"
            Clicked="AddClass"
            StyleClass="button-primary"
            Margin="10" />
    </VerticalStackLayout>
</ContentPage>
